{
  "compilerOptions": {
    "target": "ES2022", // または、Node.jsバージョンに適したターゲットに設定
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "lib": ["es2020"],
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "declaration": true,
    "sourceMap": true,
    "rootDir": "src"
  },
  "include": ["src/**/*.ts", "src/**/*.mts"],
  "exclude": ["node_modules", "dist"]
}
